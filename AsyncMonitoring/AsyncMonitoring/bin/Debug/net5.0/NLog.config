<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <variable name="myvar" value="myvalue"/>

  <targets>
    <target xsi:type="File" name="http" fileName="${basedir}/logs/change.txt"
            layout="${longdate} ${callsite} ${uppercase:${level}} ${message} ${newline}" />
    <target xsi:type="File" name="change" fileName="${basedir}/logs/${shortdate}.txt"
            layout="${longdate} ${callsite} ${uppercase:${level}} ${message} ${newline}" />
  </targets>

  <rules>
    <logger name="http" minlevel="Trace" writeTo="http" />
    <logger name="change" minlevel="Trace" writeTo="change" />
  </rules>
</nlog>
