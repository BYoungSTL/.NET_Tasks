<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <variable name="myvar" value="myvalue"/>

  <targets>

    <!-- <target xsi:type="File" name="txt" fileName="${basedir}/logs/txt/${shortdate}.txt" -->
    <!--         layout="${longdate} ${callsite} ${uppercase:${level}} ${message} ${newline}" /> -->
    
    <target xsi:type="File" name="word" fileName="${basedir}/logs/word/${shortdate}.docx"
            layout="${longdate} ${callsite} ${uppercase:${level}} ${message} ${newline}" />
    
    <target xsi:type="EventLog" name="log" source="Logging" fileName="${basedir}/logs/eventlog/${shortdate}.log"
            layout="${longdate} ${callsite} ${uppercase:${level}} ${message} ${newline}" />
  </targets>

  <rules>
    <!-- <logger name="txt" minlevel="Trace" writeTo="txt" /> -->
    <logger name="log" minlevel="Trace" writeTo="log" />
    <logger name="word" minlevel="Trace" writeTo="word" />
  </rules>
</nlog>
